// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  teams Team[]
  matches Match[]
  championships Championship[]

  @@map("users")
}

model Team {
  id    Int     @id @default(autoincrement())
  name  String
  matchesAsHome Match[] @relation("teamHome")
  matchesAsGuest Match[] @relation("teamGuest")
  user User @relation(fields: [userId], references: [id])
  userId Int

  @@map("teams")
}

model Championship {
  id Int @id  @default(autoincrement())
  name String
  createdAt DateTime
  matches Match[]
  user User @relation(fields: [userId], references: [id])
  userId Int

  @@map("championships")
}

model Match {
  id Int @id @default(autoincrement())
  championship Championship @relation(fields: [championshipId], references: [id])
  championshipId Int
  teamHome Team @relation("teamHome", fields: [teamHomeId], references: [id])
  teamHomeId Int
  teamGuest Team @relation("teamGuest", fields: [teamGuestId], references: [id])
  teamGuestId Int
  teamHomeGoals Int
  teamGuestGoals Int
  stage String
  user User @relation(fields: [userId], references: [id])
  userId Int

  @@map("matches")
}